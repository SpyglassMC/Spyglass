{
  "name": "@spyglassmc/locales",
  "version": "0.1.0-PLACEHOLDER",
  "type": "module",
  "description": "Locales for the Spyglass Project",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "license": "MIT",
  "scripts": {
    "build": "wireit",
    "release": "npm publish",
    "release:dry": "npm publish --tag release --dry-run"
  },
  "wireit": {
    "build": {
      "command": "node ./build.js",
      "files": [
        "src/locales/*.json"
      ],
      "output": [
        "lib/locales/*.js"
      ]
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/SpyglassMC/Spyglass.git"
  }
}
