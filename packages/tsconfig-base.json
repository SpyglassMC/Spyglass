{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"module": "node20",
		"moduleResolution": "node16",
		"target": "ES2022",
		"lib": [
			"ES2024",
			"ESNext.Array",
			"ESNext.Collection",
			"ESNext.Iterator",
			"DOM"
		],

		"alwaysStrict": true,
		"experimentalDecorators": true,
		"forceConsistentCasingInFileNames": true,
		"noErrorTruncation": true,
		"noImplicitAny": true,
		"noImplicitOverride": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"strict": true,

		"pretty": true,
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"composite": true,
		"incremental": true,
		"newLine": "LF",
		"skipLibCheck": true
	}
}
