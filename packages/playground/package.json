{
  "name": "@spyglassmc/playground",
  "version": "0.1.0-PLACEHOLDER",
  "type": "module",
  "private": true,
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "author": "SPGoding",
  "license": "MIT",
  "scripts": {
    "build": "wireit",
    "build:dev": "wireit",
    "deploy": "node deploy.js",
    "release": "echo TODO",
    "release:dry": "echo TODO",
    "watch": "npm run build:dev --watch"
  },
  "wireit": {
    "build": {
      "command": "node esbuild.js prod",
      "dependencies": [
        "../..:build:packages"
      ],
      "files": [
        "out/index.js"
      ],
      "output": [
        "dist/index.js"
      ]
    },
    "build:dev": {
      "command": "node esbuild.js dev",
      "dependencies": [
        "../..:build:packages"
      ],
      "files": [
        "out/index.js"
      ],
      "output": [
        "dist/index.js"
      ]
    }
  },
  "devDependencies": {
    "@codemirror/autocomplete": "^0.20.2",
    "@codemirror/basic-setup": "^0.20.0",
    "@codemirror/state": "^0.20.0",
    "@codemirror/view": "^0.20.6",
    "@codemirror/commands": "^0.20.0",
    "esbuild": "^0.17.18"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/SpyglassMC/Spyglass.git"
  },
  "homepage": "https://spyglassmc.com",
  "bugs": {
    "url": "https://github.com/SpyglassMC/Spyglass/issues"
  }
}
