{
	"name": "@spyglassmc/root",
	"private": true,
	"version": "1.0.0",
	"license": "MIT",
	"scripts": {
		"build": "npm run build:tsc && npm run build:locales && npm run build:playground && npm run build:vscode-extension",
		"build:dev": "npm run build:tsc && npm run build:locales && npm run build:playground:dev && npm run build:vscode-extension:dev",
		"build:tsc": "tsc -b packages",
		"build:locales": "npm run build --workspace=packages/locales",
		"build:playground": "npm run build --workspace=packages/playground",
		"build:playground:dev": "npm run build:dev --workspace=packages/playground",
		"build:vscode-extension": "npm run build --workspace=packages/vscode-extension",
		"build:vscode-extension:dev": "npm run build:dev --workspace=packages/vscode-extension",
		"watch": "tsc -b -w packages",
		"clean": "tsc -b packages --clean",
		"clean:full": "rm -rf packages/*/lib packages/*/out packages/*/dist packages/*/test-out packages/*/*.tsbuildinfo",
		"commit": "gitmoji -c",
		"docs:install": "cd docs && (bundle || true) && cd ..",
		"docs:start": "cd docs && (bundle exec jekyll serve --incremental || true) && cd ..",
		"lint": "eslint --cache --max-warnings=0 packages/*/{src,test}/**/*.{cts,mts,ts}",
		"lint:fix": "eslint --cache --max-warnings=0 --fix packages/*/{src,test}/**/*.{cts,mts,ts}",
		"prettier": "prettier --check packages/*/{src,test}/**/*.{cts,mts,ts}",
		"prettier:fix": "prettier --write packages/*/{src,test}/**/*.{cts,mts,ts}",
		"release": "ts-node scripts/release.ts",
		"release:dry": "ts-node scripts/release.ts --dry-run",
		"set-tsconfig-references": "ts-node scripts/set_tsconfig_references",
		"start-discord-bot": "node packages/discord-bot/lib/index.js",
		"test": "nyc mocha",
		"test:local": "nyc mocha --config .mocharc.local.jsonc"
	},
	"devDependencies": {
		"@types/benchmark": "^2.1.1",
		"@types/mocha": "^9.1.1",
		"@types/node": "^14.14.37",
		"@types/snap-shot-core": "^10.2.0",
		"@types/webpack": "^5.28.0",
		"@typescript-eslint/eslint-plugin": "^5.30.5",
		"@typescript-eslint/parser": "^5.30.5",
		"all-contributors-cli": "^6.20.0",
		"benchmark": "^2.1.4",
		"circular-dependency-plugin": "^5.2.2",
		"eslint": "^8.19.0",
		"eslint-config-prettier": "^8.5.0",
		"gitmoji-cli": "^8.0.0",
		"mocha": "^10.0.0",
		"node-loader": "^2.0.0",
		"nyc": "^15.1.0",
		"prettier": "^2.7.1",
		"snap-shot-core": "^10.2.4",
		"snap-shot-it": "^7.9.6",
		"source-map-loader": "^4.0.0",
		"source-map-support": "^0.5.21",
		"ts-loader": "^9.3.1",
		"ts-node": "^10.8.2",
		"typescript": "^4.7.4",
		"webpack": "^5.73.0",
		"webpack-cli": "^4.10.0"
	},
	"config": {
		"snap-shot-it": {
			"useRelativePath": true,
			"sortSnapshots": true
		}
	},
	"workspaces": [
		"packages/**"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/SpyglassMC/Spyglass.git"
	},
	"homepage": "https://spyglassmc.com",
	"bugs": {
		"url": "https://github.com/SpyglassMC/Spyglass/issues"
	}
}
