{
	"name": "@spyglassmc/root",
	"private": true,
	"version": "1.0.0",
	"license": "MIT",
	"scripts": {
		"build": "tsc -b packages",
		"watch": "tsc -b -w packages",
		"clean": "tsc -b packages --clean",
		"commit": "gitmoji -c",
		"con": "cd contributors && all-contributors generate && cd ..",
		"docs:install": "cd docs; bundle; cd ..",
		"docs:start": "cd docs; bundle exec jekyll serve; cd ..",
		"lint": "eslint packages/*/{src,test}/**/*.ts",
		"lint:fix": "eslint --fix packages/*/{src,test}/**/*.ts",
		"start-discord-bot": "node packages/discord-bot/lib/index.mjs",
		"test": "nyc mocha",
		"test:local": "nyc mocha --config .mocharc.local.jsonc"
	},
	"devDependencies": {
		"@types/benchmark": "^2.1.1",
		"@types/mocha": "^8.2.3",
		"@types/node": "^14.14.37",
		"@types/webpack": "^5.28.0",
		"@typescript-eslint/eslint-plugin": "^4.28.2",
		"@typescript-eslint/parser": "^4.28.2",
		"all-contributors-cli": "^6.20.0",
		"benchmark": "^2.1.4",
		"circular-dependency-plugin": "^5.2.2",
		"codecov": "^3.8.2",
		"eslint": "^7.30.0",
		"gitmoji-cli": "^4.1.0",
		"mocha": "^9.0.2",
		"node-loader": "^2.0.0",
		"nyc": "^15.1.0",
		"snap-shot-it": "^7.9.6",
		"source-map-loader": "^3.0.0",
		"source-map-support": "^0.5.19",
		"ts-loader": "^9.2.3",
		"ts-node": "^10.0.0",
		"typescript": "^4.5.4",
		"webpack": "^5.44.0",
		"webpack-cli": "^4.7.2"
	},
	"config": {
		"snap-shot-it": {
			"useRelativePath": true,
			"sortSnapshots": true
		}
	},
	"workspaces": [
		"packages/**"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/SpyglassMC/Spyglass.git"
	},
	"homepage": "https://spyglassmc.com",
	"bugs": {
		"url": "https://github.com/SpyglassMC/Spyglass/issues"
	}
}
