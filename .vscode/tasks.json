{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "npm",
			"script": "watch",
			"group": "build",
			"isBackground": true,
			"problemMatcher": "$tsc-watch",
			"label": "npm: watch",
			"detail": "Compiles all packages to JavaScript."
		},
		{
			"type": "npm",
			"script": "watch",
			"group": "build",
			"isBackground": true,
			"path": "packages/vscode-extension/",
			"dependsOn": "npm: watch",
			"problemMatcher": {
				"severity": "error",
				"fileLocation": "absolute",
				"source": "esbuild",
				"background": {
					"activeOnStart": true,
					"beginsPattern": "Start building\\.\\.\\.",
					"endsPattern": "Built successfully\\."
				},
				"pattern": [
					{
						"regexp": "ERROR in ([^\\(]*)\\((\\d+),(\\d+)\\):",
						"file": 1,
						"line": 2,
						"column": 3
					},
					{
						"regexp": "([A-Za-z0-9-]+):(.*)",
						"message": 2,
						"code": 1
					}
				]
			},
			"label": "npm: watch - packages/vscode-extension",
			"detail": "Builds the VS Code extension."
		},
		{
			"type": "npm",
			"script": "test",
			"group": "test",
			"problemMatcher": [],
			"label": "npm: test",
			"detail": "Run tests of all packages."
		}
	]
}